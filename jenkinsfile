pipeline {
    agent {
        kubernetes {
            label 'jenkins-agent'
            yaml """
            apiVersion: v1
            kind: Pod
            spec:
              containers:
              - name: docker
                image: docker:20.10
                command:
                - cat
                tty: true
                volumeMounts:
                - name: docker-sock
                  mountPath: /var/run/docker.sock
              - name: sonar-scanner
                image: sonarsource/sonar-scanner-cli:4.6
                command:
                - cat
                tty: true
              volumes:
              - name: docker-sock
                hostPath:
                  path: /var/run/docker.sock
            """
        }
    }
    environment {
        GHCR_USERNAME = credentials('github-username') // Replace with Jenkins credential ID for GitHub username
        GHCR_TOKEN = credentials('github-token')       // Replace with Jenkins credential ID for GitHub tokengit 
    }
    stages {
        stage('Checkout Repository') {
            steps {
                checkout scm
            }
        }
        stage('Login to GitHub Container Registry') {
            steps {
                container('docker') {
                    sh '''
                    echo "$GHCR_TOKEN" | docker login ghcr.io -u "$GHCR_USERNAME" --password-stdin
                    '''
                }
            }
        }
        stage('SonarQube Scan') {
            steps {
                container('sonar-scanner') {
                    withSonarQubeEnv('demo') {
                        sh '''
                        sonar-scanner -Dsonar.projectKey=demo 
                        '''
                    }
                }
            }
        }
        stage('Build and Push Docker Image') {
            steps {
                container('docker') {
                    sh '''
                    docker buildx build --platform linux/amd64 --platform linux/arm64 --platform amd64 --push -f ./Frontend/ --tag ghcr.io/itsmanibharathi/demo_frontend:latest --progress=plain
                    docker buildx build --platform linux/amd64 --platform linux/arm64 --platform amd64 --push -f ./Backend/ --tag ghcr.io/itsmanibharathi/demo_backend:latest --progress=plain
                    '''
                }
            }
        }
    }
}